@model List<Albums.Models.Photo>

@{
    int counter = 1;
}

@if (!Model.Any())
{
    <h1>There is no albums.</h1>
}
else
{
    <form method="get">
        <div class="input-group">
            <input class="form-control" type="text" id="Search" placeholder="Search" />
        </div>
    </form>

    <input id="HiddenId" value="@Model[0].AlbumId" type="hidden" />

    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>#</th>
                <th>Album title</th>
                <th>Thumbnail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="Search">
                    <td>
                        @counter
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        <img src="@item.ThumbnailUrl" />
                    </td>
                </tr>
                counter += 1;
            }
        </tbody>
    </table>
}

<style>
    #navBar li {
        padding: 15px;
    }
</style>