@model Albums.Models.User

<div>
    <form>
        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" placeholder="Enter new name" asp-for="@Model.Name">
        </div>
        <div class="form-group">
            <label for="Username">Username</label>
            <input class="form-control" placeholder="Enter new username" asp-for="@Model.Username">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input class="form-control" placeholder="Enter new email" asp-for="@Model.Email">
        </div>
        <div class="form-group">
            <label for="Phone">Phone</label>
            <input class="form-control" placeholder="Enter new phone" asp-for="@Model.Phone">
        </div>
        <div class="form-group">
            <label for="Website">Website</label>
            <input class="form-control" placeholder="Enter new website" asp-for="@Model.Website">
        </div>
        <input type="hidden" asp-for="@Model.Id" />
        <button class="btn btn-primary" asp-action="Save" asp-controller="Users">Save</button>
    </form>
</div>
